<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach((value) => { %>
            <div class="item">
              <div class="image">
                <img src="<%= value.image %>">
              </div>
              <div class="content">
                <a class="header" href="/blogs/<%= value._id %>"><%= value.title %></a>
                <div class="meta">
                    <span><%= value.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%- value.body.substring(0, 100) %>...</p>
                </div>
                <div class="extra">
                    <a class="ui floated basic violet button" href="/blogs/<%= value._id %>">
                        Read More
                        <i class="right chevron icon"></i>
                    </a>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>


<% include partials/footer %>