<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input name="blog[title]" placeholder="Title" type="text">
        </div>
        <div class="field">
            <label>Image</label>
            <input name="blog[image]" placeholder="Image" type="text">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"></textarea>
        </div>

        <button class="huge ui button" type="submit">Submit</button>
    </form>
</div>

<% include partials/footer %>